<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="5dip">
		
		<TextView android:layout_width="fill_parent" 
	  	  	android:layout_height="wrap_content" 
	    	android:text="Titulo del plan"	
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"   
	    	android:textSize="20px" 	
	   	 	android:gravity="center_vertical|center_horizontal" 
	    	/> 
	    <EditText android:id="@+id/edit_text_tittle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"   
        	/>	
        <TextView android:layout_width="fill_parent" 
	  	  	android:layout_height="wrap_content" 
	    	android:text="Dia inicio"
	   	 	android:gravity="center_vertical|center_horizontal" 
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"
	    	android:textSize="20px" 	   
	    	/> 
	    <DatePicker android:id="@+id/datePicker_inicio" 
    		android:layout_width="fill_parent" 
   			android:layout_height="wrap_content" 
   			android:layout_gravity="center_horizontal"
   			android:paddingTop="10dip"
   			android:paddingBottom="5dip"
   			/>
	    <TextView android:layout_width="fill_parent" 
	  	  	android:layout_height="wrap_content" 
	    	android:text="Dia fin"
	   	 	android:gravity="center_vertical|center_horizontal" 
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"
	    	android:textSize="20px" 	   
	    	/>
	    <DatePicker android:id="@+id/datePicker_fin" 
    		android:layout_width="fill_parent" 
   			android:layout_height="wrap_content" 
   			android:layout_gravity="center_horizontal"
   			android:paddingTop="10dip"
   			android:paddingBottom="5dip"
   			/> 		
	    <TextView android:layout_width="fill_parent" 
	  	  	android:layout_height="wrap_content" 
	    	android:text="Descripcion y datos de interes"
	   	 	android:gravity="center_vertical|center_horizontal" 
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"  
	    	android:textSize="20px" 	 
	    	/> 	
	    <EditText android:id="@+id/edit_text_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
	    	android:paddingTop="5dip"
	    	android:paddingBottom="5dip"   
        	/>
    	<LinearLayout android:id="@+id/linear_guardar"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:padding="10dip"
			 android:gravity="bottom"
			 android:background="#a9a9a9">
			<Button android:id="@+id/guardar_plan"
		 		android:text="Guardar"
			 	android:layout_width="fill_parent"
			 	android:layout_height="wrap_content"
			 	 />	
	 	 </LinearLayout>
	</LinearLayout>
</ScrollView>	
