<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="web40.gsi">
    <uses-sdk android:minSdkVersion="7" />
    
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    
    <application android:icon="@drawable/web40_icon" android:label="@string/app_name">    
    	<activity android:name=".ui.SplashScreen"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.Main" android:label="@string/app_name" android:configChanges="keyboard|keyboardHidden|orientation"></activity>
        <activity android:name=".ui.Conversacion" android:configChanges="keyboard|keyboardHidden|orientation" android:label="@string/tab1"></activity>
        <activity android:name=".ui.Sugerencias" android:configChanges="orientation|keyboardHidden" android:label="@string/tab2"></activity>
        <activity android:name=".ui.Planes" android:configChanges="keyboard|keyboardHidden|orientation" android:label="@string/tab3"></activity>
        <activity android:name=".ui.AddPlan" android:configChanges="keyboard|keyboardHidden|orientation"></activity>
    </application>    
</manifest>